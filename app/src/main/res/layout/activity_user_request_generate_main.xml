<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_request_generate_MainActivity"
    android:background="#BBF4F1">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Goods Transport Request"
        android:textAlignment="center"
        android:textColor="#025950"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.67">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.604"
                tools:layout_editor_absoluteX="0dp">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/request_generat_textinput_address_from"
                    style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:hint="Address From"
                    android:textColorHint="#025950"
                    app:errorEnabled="true"
                    app:hintTextColor="#025950">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#EBFCFB"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/request_generat_textinput_address_to"
                    style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:hint="Address To"
                    android:textColorHint="#025950"
                    app:errorEnabled="true"
                    app:hintTextColor="#025950">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#EBFCFB"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/request_generat_textinput_distance"
                    style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:hint="Distance (in km)"
                    android:textColorHint="#025950"
                    app:errorEnabled="true"
                    app:hintTextColor="#025950">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#EBFCFB"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/request_generat_textinput_material_name"
                    style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:hint="Material name"
                    android:textColorHint="#025950"
                    app:errorEnabled="true"
                    app:hintTextColor="#025950">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#EBFCFB"
                        android:hint=""
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/request_generat_textinput_material_quantity"
                    style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:hint="Material quantity (in kg)"
                    android:textColorHint="#025950"
                    app:errorEnabled="true"
                    app:hintTextColor="#025950">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#EBFCFB"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        android:text="Estimated Price (in Rs) :"
                        android:textColor="#025950"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/request_generat_txt_estimated_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:textColor="#025950"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Loading date:-"
                    android:textColor="#025950"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/request_generat_textinput_loading_dd"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:hint="DD"
                        android:textColorHint="#025950"
                        app:errorEnabled="true">

                        <AutoCompleteTextView
                            android:id="@+id/request_generat_autocomplete_loading_dd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#EBFCFB"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/request_generat_textinput_loading_mm"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:hint="MM"
                        android:textColorHint="#025950"
                        app:errorEnabled="true">

                        <AutoCompleteTextView
                            android:id="@+id/request_generat_autocomplete_loading_mm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#EBFCFB"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/request_generat_textinput_loading_yyyy"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:hint="YYYY"
                        android:textColorHint="#025950"

                        app:errorEnabled="true">

                        <AutoCompleteTextView
                            android:id="@+id/request_generat_autocomplete_loading_yyyy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#EBFCFB"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Unloading date:-"
                    android:textColor="#025950"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/request_generat_textinput_unloading_dd"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:hint="DD"
                        android:textColorHint="#025950"
                        app:errorEnabled="true">

                        <AutoCompleteTextView
                            android:id="@+id/request_generat_autocomplete_unloading_dd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#EBFCFB"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/request_generat_textinput_unloading_mm"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:hint="MM"
                        android:textColorHint="#025950"
                        app:errorEnabled="true">

                        <AutoCompleteTextView
                            android:id="@+id/request_generat_autocomplete_unloading_mm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#EBFCFB"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/request_generat_textinput_unloading_yyyy"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:hint="YYYY"
                        android:textColorHint="#025950"
                        app:errorEnabled="true">

                        <AutoCompleteTextView
                            android:id="@+id/request_generat_autocomplete_unloading_yyyy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#EBFCFB"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/request_generat_btn_submit"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/login_or_signin_btn_style"
                    android:text="SUBMIT"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>